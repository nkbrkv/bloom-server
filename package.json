{
    "name": "bloom-store",
    "version": "1.0.0",
    "main": "dist/index.js",
    "scripts": {
        "start": "node dist/index.js",
        "dev": "ts-node src/index.ts",
        "dev:nodemon": "nodemon --exec ts-node src/index.ts",
        "dev:watch": "nodemon src/index.ts",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write src/**/*.ts",
        "format:check": "prettier --check src/**/*.ts",
        "type-check": "tsc --noEmit",
        "check-all": "npm run type-check && npm run lint && npm run format:check",
        "fix-all": "npm run format && npm run lint:fix",
        "start:db": "docker-compose up -d",
        "load-mock": "ts-node src/scripts/loadMockData.ts"
    },
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "bcrypt": "^6.0.0",
        "dotenv": "^17.2.1",
        "fastify": "^5.4.0",
        "jsonwebtoken": "^9.0.2",
        "undici": "^6.21.3",
        "validator": "^13.15.15"
    },
    "devDependencies": {
        "@faker-js/faker": "^9.9.0",
        "@types/bcrypt": "^6.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.1.0",
        "@types/validator": "^13.15.2",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.3",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
        "tslib": "^2.8.1",
        "typescript": "^5.9.2"
    }
}
